<div class="dropdown align-right">
  <button id="user-{{userId}}-menu" type="button" class="btn btn-xs btn-default dropdown-toggle"
          data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
    <span class="caret"></span>
  </button>
  <ul aria-labelledby="user-{{userId}}-menu" data-user="{{userId}}" class="user-popup-menu dropdown-menu">
    {{#each actions}}
      <li><a data-action="{{name}}" href="javascript:void(0)">{{label}}</a></li>
    {{/each}}
  </ul>
</div>
